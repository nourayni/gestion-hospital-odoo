<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- action patients -->
    <record model="ir.actions.act_window" id="hospital_patient_action">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">kanban,tree,search,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau patient
            </p>
        </field>
    </record>
    <!-- kanban -->
    <record model="ir.ui.view" id="hospital_patient_kanban_view">
        <field name="name">hospital.patient.kanban</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="firstname"/>
                <field name="lastname"/>
                <field name="genre"/>
                <field name="age"/>
                <field name="group_sanguin"/>
                <field name="allergie"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="firstname"/>
                                        <field name="lastname"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="genre" widget="label_selection" options="{'classes': {'male': 'default', 'female': 'success', 'other': 'warning'}}"/>
                                <field name="age"/>
                                <field name="group_sanguin"/>
                                <field name="allergie"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!-- vue liste -->
    <record model="ir.ui.view" id="hospital_patient_tree_view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="firstname"/>
                <field name="lastname"/>
                <field name="date_of_birth"/>
                <field name="age"/>
                <field name="group_sanguin"/>
                <field name="genre" />
            </tree>
        </field>
    </record>
    <!--  vue search -->
    <record model="ir.ui.view" id="hospital_patient_search_view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="firstname"/>
                <field name="lastname"/>
                <field name="date_of_birth"/>
                <field name="age"/>
                <field name="group_sanguin"/>
                <field name="allergie"/>
                <field name="genre" />
                <filter name="filter_male" string="Hommes" domain="[('genre', '=', 'male')]"/>
                <filter name="filter_female" string="Femmes" domain="[('genre', '=', 'female')]"/>
                <filter name="filter_age_group" string="Groupe d'âge" context="{'group_by': 'age'}"/>
                <filter name="filter_blood_group" string="Groupe Sanguin" context="{'group_by': 'group_sanguin'}"/>
                <separator/>
                <filter name="filter_allergy" string="Avec Allergie" domain="[('allergie', '!=', False)]"/>
                <separator/>
                <filter name="filter_today" string="Aujourd'hui" domain="[('date_of_birth', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_week" string="Cette semaine" domain="[('date_of_birth', '>=', context_today().strftime('%Y-%m-%d')), ('date_of_birth', '&lt;=', (context_today()+relativedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="Ce mois-ci" domain="[('date_of_birth', '>=', context_today().strftime('%Y-%m-01')), ('date_of_birth', '&lt;=', (context_today()+relativedelta(months=1, day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Groupe par">
                    <filter name="group_by_gender" string="Genre" context="{'group_by': 'genre'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- vue formulaire -->

    <record model="ir.ui.view" id="hospital_patient_form_view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="firstname"/>
                        <field name="lastname"/>
                        <field name="date_of_birth"/>
                        <field name="age"/>
                        <field name="genre" />
                        <field name="group_sanguin"/>
                        <field name="allergie"/>
                        <field name="address"/>
                    </group>
                    <notebook>
                        <page string="Consultations">
                            <field name="consultation_ids"/>
                        </page>
                        <page string="Dossier Médical">
                            <field name="dossier_medical_id"/>
                        </page>
                        <page string="Rendez-vous">
                            <field name="appointment_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="hospital_root_menu"
              name="Hôpital"
              web_icon="hospital,static/description/icon.png"
          />
    <!-- menue patient -->
    <menuitem id="hospital_patient_menu"
              name="Patients"
              parent="hospital_root_menu"
              action="hospital_patient_action"/>

